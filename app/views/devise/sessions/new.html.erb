<div class='container'>
	<div class='row clearfix'>
      <div class="col-md-12 column">
        <div class="jumbotron">
				<h1 class='main-title'>
					BlackProfessionals.Net
				</h1>
				
                <div class='row'>
                	<div class='col-md-7'>
                	  <img src="http://placehold.it/600x350">
                	</div>
                	<div class='col-md-5'>
                      <div class="panel panel-default">
  						<div class="panel-body">
    					  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  							<div class='form-group'> 
  							  <div><%= f.label :email %><br />
  							  <%= f.email_field :email, autofocus: true, class: 'form-control' %></div>
                            </div>
  							  <div><%= f.label :password %>
                                <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
 							      <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
 							    <% end -%>
  						      <%= f.password_field :password, autocomplete: "off", class: 'form-control' %></div></br>
  
   
							<div><%= f.submit "Login", class: 'btn btn-primary'%> Or <%= link_to "Sign up", new_user_registration_path %><br /></div>
 							<% end %>
  						</div>
					  </div>
                    </div>
                </div>
		</div> 
      </div>
	</div>
</div>
