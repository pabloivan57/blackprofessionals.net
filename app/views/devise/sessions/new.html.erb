<%= stylesheet_link_tag    "custom", :media => 'screen' %>

<nav class="navbar_sign-in">
  <div class="loginHolder">
    <div class="siteName-holder">
      <a class="siteName" href="#">BlackProfessionals.net</a>
      <form class="navbar-form navbar-right" role="sign-in">
      	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group" role="username">
	<div class="nav_bar_label">
        	<%= f.label :email,{:style=>'margin-bottom: 0px'} %><br>
        	<%= f.email_field :email, autofocus: true, class: 'form-control' %>
	</div>
        </div>
        <div class="form-group" role="password">
	<div class="nav_bar_label">
        <%= f.label :password,{:style=>'margin-bottom: 0px'} %>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
		<%= link_to "Forgot password?", new_password_path(resource_name),{:style=>'font-size: 10px; margin-left: 20px'} %><br>
	<% end -%>
	<%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
	</div>
        </div>
        <div class="form-group" role="Button">
          <%= f.submit "Login", class: 'btn-sign-in'%>
        </div>
        <% end %>
  </form>
    </div>
</nav>

<div class='container'>
  <div class='row clearfix'>
    <div class="col-md-12 column">
      <div class="jumbotron">
      <div class='row'>
        <div class='col-md-7'>
           <img src="../../assets/sign-in_teamWork.png">
        </div>					
      <div class='col-md-5'>
        <div class='sign-up-message'>
          <h3>
            Not a member yet ?<br /><b>Join Now - It's Free !</b>
          </h3>
        </div>
	<div class='form-border'>
	<div class='sign-up-form'>
       	    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
            <div class="form-group">
                <%= f.label :email %>
                <%= f.email_field :email, autofocus: true, :class => "form-control" %>
            </div>
            <div class="form-group">
                <%= f.label :password %>
                <%= f.password_field :password, autocomplete: "off" , :class => "form-control"%>
            </div>
            <div class="form-group">
                <%= f.label :confirm_password %>
                <%= f.password_field :confirm_password, autocomplete: "off", :class=> "form-control" %>
            </div>
            <div style='text-align: center'>
                <%= f.submit "Join Now" , :class => "btn btn-primary" %>
            </div>
            <% end %>
        </div>
        </div>
	
      </div>
      </div>
      </div> 
    </div>
  </div>
</div>
